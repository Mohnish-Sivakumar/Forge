{
  "builds": [
    {
      "src": "my-voice-assistant/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "my-voice-assistant/build"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "my-voice-assistant/$1" },
    { "src": "/(.*)", "dest": "my-voice-assistant/index.html" }
  ]
} 