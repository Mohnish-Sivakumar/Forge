{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "my-voice-assistant/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd my-voice-assistant && npm install && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/static/(.*)", "dest": "/my-voice-assistant/build/static/$1" },
    { "src": "/favicon.ico", "dest": "/my-voice-assistant/build/favicon.ico" },
    { "src": "/manifest.json", "dest": "/my-voice-assistant/build/manifest.json" },
    { "src": "/logo(.*).png", "dest": "/my-voice-assistant/build/logo$1.png" },
    { "src": "/(.*)", "dest": "/my-voice-assistant/build/index.html" }
  ]
} 